{
  "compilerOptions": {
    "target": "ESNext", // Версия ECMAScript
    "module": "NodeNext", // Используйте NodeNext
    "outDir": "./dist", // Директория для выходных файлов
    "rootDir": "./src", // Корневая директория исходного кода
    "strict": true, // Включает строгий режим
    "esModuleInterop": true, // Упрощает совместимость с CommonJS
    "moduleResolution": "NodeNext", // Опция разрешения модулей
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"] // Пропустить проверку типов в библиотеках
  },
  "include": ["src/**/*"], // Включение файлов
  "exclude": ["node_modules"] // Исключение node_modules
}
